---
const { href } = Astro.props;
---

<a
    target="_blank"
    href={href}
    role="link"
    class="inline-flex items-center justify-center gap-2 px-3 py-2 space-x-2 
    text-base transition text-white bg-[#373542] border border-gray-700/50
     focus-visible:ring-yellow-500/80 text-md hover:text-black hover:bg-[#DBEAFE] hover:border-gray-900 
     group max-w-fit rounded-xl focus:outline-none focus-visible:outline-none focus-visible:ring
      focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black hover:"
>
    <slot />
</a>
